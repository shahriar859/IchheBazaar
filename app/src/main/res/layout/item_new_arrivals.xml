<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="210dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" /> <!-- Replace with actual image resource -->

        <!-- Product Title -->
        <TextView
            android:id="@+id/textProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="The Ordinary Niacinamide 10% + Zinc 1%"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:maxLines="2" />

        <!-- Product Quantity -->
        <TextView
            android:id="@+id/textProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="30ml"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Old Price and Discount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOldPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="৳1,550"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/textDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save 300 Taka"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- New Price -->
        <TextView
            android:id="@+id/textNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="= ৳1,250"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>