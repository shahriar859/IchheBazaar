<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.fragment.DetailsActivity">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/image_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" /> <!-- Replace with actual image resource -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp"
        >
        <!-- Product Title -->
        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="The Ordinary Niacinamide 10% + Zinc 1%"
            android:textColor="@color/text_dark_gray"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <!--        Product Description-->
        <TextView
            android:id="@+id/prod_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark_gray"
            android:textSize="15sp"
            android:textStyle="bold" />
        <!-- Product Quantity -->
        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="30ml"
            android:textStyle="bold"
            android:textColor="@color/text_dark_gray"
            android:textSize="12sp" />

        <!-- Old Price and Discount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/old_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="৳1,550"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save 300 Taka"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- New Price -->
        <TextView
            android:id="@+id/new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="= ৳1,250"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center"
        android:background="@android:color/white">

        <!-- Information Icon and Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <!-- Information Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bag_handle_outline" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Informations"
                android:textStyle="bold"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>

        <!-- Product Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Value -->
            <TextView
                android:id="@+id/category_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="The Ordinary Niacinamide 10%+Zinc1%"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Brand Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brand Name"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Value -->
            <TextView
                android:id="@+id/brand_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="The Ordinary"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shiping Cost"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Value -->
            <TextView
                android:id="@+id/shipping_cost"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
