<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_ichhebazaar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_ichhebazaar"
        android:supportsRtl="true"
        android:theme="@style/Theme.IchheBazaar"
        tools:targetApi="31">
        <activity
            android:name=".ui.slider.SliderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.fragment.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>